@model SimpleBotWeb.Models.Views.Account.AccountLogoutViewModel

@{
    ViewBag.Title = "Logoff";
}

<div class="container">
    <div class="row">
        <div class="col-12">

            @Html.WriteMessages(TempData)

            <form method="post" action="@Url.Action("Logout", "Account")">
                @Html.AntiForgeryToken()
                <div style="font-size: 120px; margin: 20px 0; font-weight: bold">
                    BYE
                </div>

                <p>
                    <button type="submit" class="btn btn-primary">Logoff</button>
                </p>
            </form>

        </div>
    </div>
</div>